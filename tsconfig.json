{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@app/*": ["./*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}
